<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:awesome="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.sherawat42.whereami.AddLocationActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Location Name"
            android:id="@+id/loc_name"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Location Type"
            android:id="@+id/loc_type"
            android:textSize="20sp"/>
        <cyd.awesome.material.AwesomeButton
            android:id="@+id/btnBootstrapPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:onClick="submitLocation"

            awesome:awesome_type="bootstrap_primary"
            awesome:awesome_rounded_corners="true"
            awesome:awesome_icon_right="FA_ARROW_RIGHT"
            awesome:awesome_font="font_awesome"
            />
    </LinearLayout>
</LinearLayout>