<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:awesome="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sherawat42.whereami.AddReminderActivity"
    tools:showIn="@layout/activity_add_reminder">

    <cyd.awesome.material.AwesomeButton
        android:id="@+id/chooseLocationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Location"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:onClick="openSelectLocationActivity"
        android:textSize="20sp"

        awesome:awesome_type="bootstrap_primary"
        awesome:awesome_rounded_corners="true"

        awesome:awesome_icon_right="FA_ARROW_RIGHT"
        awesome:awesome_font="font_awesome"
        />
    <cyd.awesome.material.AwesomeText
        android:layout_width="match_parent"
        android:textSize="20sp"
        awesome:awesome_font="font_awesome"
        android:id="@+id/location_type_text"
        android:visibility="gone"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="asfasfasf"/>
    <EditText
        android:layout_width="match_parent"
        android:hint="Description goes here!!"
        android:gravity="center"
        android:id="@+id/description"
        android:layout_height="150dp" />

</LinearLayout>
