<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:awesome="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:orientation="vertical"
android:layout_height="wrap_content"
tools:context="com.example.sherawat42.whereami.AddLocationActivity">
<!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_choose_location"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#d0d0f0"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/location_type"
            android:elevation="2dp"
            android:layout_margin="20dp"
            android:background="#ddeeff"
            android:textSize="20sp"
            android:gravity="center"
            android:text="temp1"
            xmlns:android="http://schemas.android.com/apk/res/android" />
        <cyd.awesome.material.AwesomeButton
            android:id="@+id/chooseLocationButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Choose"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:onClick="submitLocation"

            awesome:awesome_type="bootstrap_success"
            awesome:awesome_rounded_corners="true"

            awesome:awesome_icon_right="FA_ARROW_RIGHT"
            awesome:awesome_font="font_awesome"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>